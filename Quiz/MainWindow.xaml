        <StackPanel Width="200" VerticalAlignment="Center">
            <TextBox Name="txtLogin"></TextBox>
            <TextBox Name="txtPassword"></TextBox>
            <Button Click="btnLogin_Click">Sign In</Button>
            <TextBlock Name="txtResult"/>
        </StackPanel>
        
    </Grid>
</Window>
